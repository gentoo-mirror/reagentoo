DESCRIPTION="spot"
HOMEPAGE="homepage field in Cargo.toml inaccessible to cargo metadata"

if [[ ${PV} == 9999 ]]
then
	inherit git-r3
	EGIT_REPO_URI="https://github.com/xou816/spot.git"
	RESTRICT="network-sandbox"
	KEYWORDS=""
else
	SRC_URI="
		$(cargo_crate_uris ${CRATES})
		https://github.com/xou816/${PN}/archive/refs/tags/${PV}.tar.gz -> ${P}.tar.gz
	"
	KEYWORDS="~amd64 ~x86"
fi

